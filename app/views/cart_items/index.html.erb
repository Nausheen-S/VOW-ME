<p id="notice"><%= notice %></p>

<h1>Cart Items</h1>

<table>
  <thead>
    <tr>
      <th>Customer</th>
      <th>Quantity</th>
      <th>Product</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cart_items.each do |cart_item| %>

      <tr>

        <td><%= cart_item.customer.id %></td>
        <td><%= cart_item.quantity %></td>
        <td><%= cart_item.product.name %></td>
        <td><%= cart_item.product.price%></td>
        <td><%= link_to 'Remove Item', cart_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<p>


<% total_price = 0 %>
<% @cart_items.each do |cart_item| %>
	<% total_price += cart_item.product.price %>
<% end %>
	<strong>Total Price:</strong>
	<%= total_price %>
</p>
<p>
<%= link_to 'Back', root_path %>
</p>
<br>