<p id="notice"><%= notice %></p>
<body class = "cartitemsbody">
<h1 class="cartitemheading">Cart Items</h1>
<div class = "cartindextext">
<% @cart_items.each do |cart_item| %>
<div class="card mb-3" style="max-width: 540px; background-color: #F9F8EA;">
  <div class="row no-gutters">
    <div class="col-md-4">

      <img src="<%= image_url cart_item.product.image_url %>" class="card-img-top" alt="...">
    </div>
    <div class="col-md-8">
      <div class="card-body">

        <p class="card-text">

        	<strong>Quantity:</strong>
        	<%= cart_item.quantity %><br /><br/>
        	<strong>Price:</strong>
        	<%= cart_item.product.price%><br /><br/>

        	<svg class="bi bi-trash-fill" width="1em" height="1em" viewBox="0 0 16 16" fill="#CCD238" xmlns="http://www.w3.org/2000/svg">
  			<path fill-rule="evenodd" d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5a.5.5 0 0 0-1 0v7a.5.5 0 0 0 1 0v-7z"/></svg>

  			<%= link_to 'Remove Item', cart_item, :class => "deletelink",method: :delete, data: { confirm: 'Are you sure?' } %><br /><br/>

  			<svg class="bi bi-pencil" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
  			<path fill-rule="evenodd" d="M11.293 1.293a1 1 0 0 1 1.414 0l2 2a1 1 0 0 1 0 1.414l-9 9a1 1 0 0 1-.39.242l-3 1a1 1 0 0 1-1.266-1.265l1-3a1 1 0 0 1 .242-.391l9-9zM12 2l2 2-9 9-3 1 1-3 9-9z"/>
 			 <path fill-rule="evenodd" d="M12.146 6.354l-2.5-2.5.708-.708 2.5 2.5-.707.708zM3 10v.5a.5.5 0 0 0 .5.5H4v.5a.5.5 0 0 0 .5.5H5v.5a.5.5 0 0 0 .5.5H6v-1.5a.5.5 0 0 0-.5-.5H5v-.5a.5.5 0 0 0-.5-.5H3z"/>
			</svg>
			<%= link_to 'Edit', root_path %><br /><br/>
        </p>
      </div>
    </div>
  </div>
</div>
<% end %>


<br>
</div>
</body>
